# top-most EditorConfig file
root = false

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,php,css,yml,json,md}]
charset = utf-8

[*.php]
indent_style = space
indent_size = 4

[*.{css,scss}]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

# Matches the exact files either package.json
[{package.json,composer.json,bower.json}]
indent_style = space
indent_size = 2
